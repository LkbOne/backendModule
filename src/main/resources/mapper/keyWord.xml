<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.hugh.life.dao.api.KeyWordDao">
    <resultMap id="BaseResultMap" type="keyWordEntity">
        <id column="id" property="id"/>
        <result column="key_word" property="key_word"/>
        <result column="combtoken_type" property="combtokenType"/>
        <result column="token_type" property="tokenType"/>
        <result column="create_time" property="createTime"/>
    </resultMap>

    <insert id="add" parameterType="map">
        INSERT INTO key_word(
        `id`,
        `key_word`,
        `combtoken_type`,
        `token_type`,
        `create_time`
        )
        VALUES (
        #{id},
        #{keyWord},
        #{combtokenType},
        #{tokenType},
        now()
        )
    </insert>

    <select id="countByKeyWord" parameterType="map" resultType="int">
        select count(*) from key_word
        where key_word = #{keyWord}
    </select>
    <select id="getIdByKeyWord" parameterType="map" resultType="String">
        select id from key_word
        where key_word = #{keyWord}
    </select>
    <select id="queryByKeyWord" parameterType="map" resultMap="BaseResultMap">
        select * from key_word
        where key_word = #{keyWord}
    </select>

    <update id="update" parameterType="map">
        update key_word
        <set>
            <if test="combtokenType!=null">
                combtoken_type = #{combtokenType}
            </if>
            <if test="tokenType!=null">
                token_type = #{tokenType}
            </if>
        </set>
    </update>

    <!--<select id="queryLikeKeyWord" parameterMap="map" resultType="">-->


    <!--</select>-->
</mapper>