<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.hugh.life.dao.api.UserMiddleVisitContentDao">
    <resultMap id="BaseResultMap" type="userMiddleVisitContentEntity">
        <id column="id" property="id"/>
        <result column="user_id" property="userId"/>
        <result column="visit_content_id" property="visitContentId"/>
        <result column="count" property="count"/>
        <result column="create_time" property="createTime"/>
        <result column="last_modify_time" property="lastModifyTime"/>
    </resultMap>

    <insert id="add" parameterType="userMiddleVisitContentEntity">
        INSERT INTO user_middle_visit_content(
        `id`,
        `user_id`,
        `visit_content_id`,
        `count`,
        `create_time`,
        `last_modify_time`
        )
        VALUES (
        #{id},
        #{userId},
        #{visitContentId},
        #{count},
        now(),
        now()
        )
    </insert>


    <update id="update" parameterType="map">
        update user_middle_visit_content
        <set>
            count = count + 1,
            last_modify_time = now()
        </set>
        where user_id = #{userId}
        AND  visit_content_id = #{visitContentId}
    </update>
</mapper>