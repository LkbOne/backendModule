<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.hugh.life.dao.api.ClockDao">
    <resultMap id="BaseResultMap" type="clockEntity">
        <id column="id" property="id"/>
        <result column="uid" property="uid"/>
        <result column="desc" property="desc"/>
        <result column="name" property="name"/>
        <result column="time" property="time"/>
        <result column="cycle" property="cycle"/>
        <result column="status" property="status"/>
        <result column="duration" property="duration"/>
        <result column="create_time" property="createTime"/>
        <result column="last_modify_time" property="lastModifyTime"/>
    </resultMap>

    <insert id="add" parameterType="clockEntity">
        INSERT INTO clock(
        `id`,
        `uid`,
        `desc`,
        `name`,
        `time`,
        `cycle`,
        `status`,
        `duration`,
        `create_time`,
        `last_modify_time`
        )
        VALUES (
        #{id},
        #{uid},
        #{desc},
        #{name},
        #{time},
        #{cycle},
        #{status},
        #{duration},
        now(),
        now()
        )
    </insert>

    <select id="listClock" parameterType="map"  resultMap="BaseResultMap">
      select *from clock where uid = #{uid}
    </select>
</mapper>