<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.hugh.life.dao.api.MessageDao">
    <resultMap id="BaseResultMap" type="messageEntity">
        <id column="id" property="id"/>
        <result column="message" property="message"/>
        <result column="create_time" property="createTime"/>
        <result column="last_modify_time" property="lastModifyTime"/>
        <result column="uid" property="uid"/>
    </resultMap>

    <insert id="addMessage" parameterType="messageEntity">
        INSERT INTO message(
        `id`,
        `message`,
        `create_time`,
        `last_modify_time`,
        `uid`
        )
        VALUES (
        #{id},
        #{message},
        now(),
        now(),
        #{uid}
        )
    </insert>

    <select id="listMessages" parameterType="map" resultMap="BaseResultMap">
        SELECT *
        FROM message
        order by create_time desc
        limit 10
    </select>


</mapper>