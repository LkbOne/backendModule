<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.hugh.life.dao.api.TranslateInfoDao">
    <resultMap id="BaseResultMap" type="translateInfoEntity">
        <id column="id" property="id"/>
        <result column="user_id" property="userId"/>
        <result column="content" property="content"/>
        <result column="translate_content" property="translateContent"/>
        <result column="from" property="from"/>
        <result column="to" property="to"/>
        <result column="create_time" property="createTime"/>
    </resultMap>

    <insert id="add" parameterType="translateInfoEntity">
        INSERT INTO translate_info(
        `id`,
        `user_id`,
        `content`,
        `translate_content`,
        `to`,
        `from`,
        `create_time`
        )
        VALUES (
        #{id},
        #{userId},
        #{content},
        #{translateContent},
        #{to},
        #{from},
        now()
        )
    </insert>

    <select id="listInfo" parameterType="map"  resultType="com.example.hugh.life.dao.dto.TranslateInfoDto">
      select content, translate_content as translateContent, create_time as createTime
      from translate_info
      where user_id = #{userId}
      order by create_time
      limit #{limit}
    </select>
</mapper>