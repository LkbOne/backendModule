<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.hugh.life.dao.api.UserMiddleMovieInfoDao">
    <resultMap id="BaseResultMap" type="userMiddleMovieInfoEntity">
        <id column="id" property="id"/>
        <result column="user_id" property="userId"/>
        <result column="movie_info_id" property="movieInfoId"/>
        <result column="count" property="count"/>
        <result column="create_time" property="createTime"/>
        <result column="last_modify_time" property="lastModifyTime"/>
    </resultMap>

    <insert id="add" parameterType="userMiddleMovieInfoEntity">
        INSERT INTO user_middle_movie_info(
        `id`,
        `user_id`,
        `movie_info_id`,
        `count`,
        `create_time`,
        `last_modify_time`
        )
        VALUES (
        #{id},
        #{userId},
        #{movieInfoId},
        #{count},
        now(),
        now()
        )
    </insert>


    <select id="queryByUserIdAndMovieInfoId" parameterType="map" resultMap="BaseResultMap">
        select * from user_middle_movie_info
        where user_id = #{userId} and movie_info_id = #{movieInfoId}
    </select>

    <update id="update" parameterType="userMiddleMovieInfoEntity" >
        update user_middle_movie_info
        <set>
            `count` = #{count},
            `last_modify_time` = now()
        </set>
        where user_id = #{userId} and movie_info_id = #{movieInfoId}
    </update>
</mapper>