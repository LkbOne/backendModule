<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.hugh.life.dao.api.TypesDao">
    <resultMap id="BaseResultMap" type="typesEntity">
        <id column="id" property="id"/>
        <result column="type_info" property="typeInfo"/>
        <result column="create_time" property="createTime"/>
    </resultMap>

    <insert id="add" parameterType="typesEntity">
        INSERT INTO types(
        `id`,
        `type_info`,
        `create_time`
        )
        VALUES (
        #{id},
        #{typeInfo},
        now()
        )
    </insert>

    <select id="queryByTypeInfo" parameterType="map" resultMap="BaseResultMap">
        select *
        from types
        where type_info=#{typesInfo}
    </select>
</mapper>