<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.hugh.life.dao.api.ChromeVisitUrlDao">
    <resultMap id="BaseResultMap" type="chromeVisitUrlEntity">
        <id column="id" property="id"/>
        <result column="uid" property="uid"/>
        <result column="title" property="title"/>
        <result column="visit_count" property="visitCount"/>
        <result column="type_count" property="typedCount"/>
        <result column="last_visit_time" property="lastVisitTime"/>
        <result column="hidden" property="hidden"/>
        <result column="divided" property="divided"/>
    </resultMap>

    <insert id="add" parameterType="chromeVisitUrlEntity">
        INSERT INTO chrome_visit_url(
        `id`,
        `uid`,
        `title`,
        `visit_count`,
        `type_count`,
        `last_visit_time`,
        `hidden`,
        `divided`
        )
        VALUES (
        #{entity.id},
        #{uid},
        #{entity.title},
        #{entity.visitCount},
        #{entity.typeCount},
        #{entity.lastVisitTime},
        #{entity.hidden},
        0
        )
    </insert>

    <insert id="batchAdd" parameterType="map">
        INSERT INTO chrome_visit_url(
        `id`,
        `uid`,
        `url`,
        `title`,
        `visit_count`,
        `typed_count`,
        `last_visit_time`,
        `hidden`,
        `divided`
        ) VALUES
        <foreach collection="entities" item="entity" index="index" separator=",">
            (#{entity.id}, #{uid}, #{entity.url},#{entity.title} , #{entity.visit_count}, #{entity.typed_count},
            #{entity.last_visit_time}, #{entity.hidden}, 0)
        </foreach>
    </insert>

    <select id="listByUid" parameterType="map" resultMap="BaseResultMap">
        select* from chrome_visit_url where uid =#{uid}
    </select>

    <select id="listByLikeUrl" parameterType="map" resultMap="BaseResultMap">
        select* from chrome_visit_url where uid = #{uid}
         <![CDATA[
                AND url LIKE CONCAT('%', #{part}, '%')

        ]]>
    </select>
    <select id="countUrlById" parameterType="map" resultType="int">
        select count(1) from chrome_visit_url where id = #{id}
    </select>
    <update id="update" parameterType="map">
        update chrome_visit_url
        <set>
            <if test="entity.visit_count!=null">
                visit_count = #{entity.visit_count}
            </if>
            <if test="entity.type_count!=null">
                type_count = #{entity.type_count}
            </if>
            <if test="entity.last_visit_time!=null">
                last_visit_time = #{entity.last_visit_time}
            </if>
            <if test="entity.hidden!=null">
                hidden = #{entity.hidden}
            </if>
        </set>
        where id = #{entity.id}
    </update>
    <select id="listByDivided" parameterType="map" resultMap="BaseResultMap">
        select *
        from chrome_visit_url
        where divided = #{divided}
    </select>

    <update id="updateDivided" parameterType="map">
        update chrome_visit_url
        <set>
            <if test="divided!=null">
              divided = #{divided}
            </if>
        </set>
        where id = #{id}
    </update>
</mapper>