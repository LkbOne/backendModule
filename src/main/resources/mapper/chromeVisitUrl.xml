<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.hugh.life.dao.api.ChromeVisitUrlDao">
    <resultMap id="BaseResultMap" type="chromeVisitUrlEntity">
        <id column="id" property="id"/>
        <result column="uid" property="uid"/>
        <result column="title" property="title"/>
        <result column="visit_count" property="visitCount"/>
        <result column="type_count" property="typedCount"/>
        <result column="last_visit_time" property="lastVisitTime"/>
        <result column="hidden" property="hidden"/>
    </resultMap>

    <insert id="add" parameterType="chromeVisitUrlEntity">
        INSERT INTO chrome_visit_url(
        `id`,
        `uid`,
        `title`,
        `visit_count`,
        `type_count`,
        `last_visit_time`,
        `hidden`
        )
        VALUES (
        #{id},
        #{uid},
        #{title},
        #{visitCount},
        #{typeCount},
        #{lastVisitTime},
        #{hidden}
        )
    </insert>

    <insert id="batchAdd" parameterType="map">
        INSERT INTO chrome_visit_url(
        `id`,
        `uid`,
        `url`,
        `title`,
        `visit_count`,
        `typed_count`,
        `last_visit_time`,
        `hidden`
        ) VALUES
        <foreach collection="entities" item="entity" index="index" separator=",">
            (#{entity.id}, #{uid}, #{entity.url},#{entity.title} , #{entity.visit_count}, #{entity.typed_count}, #{entity.last_visit_time},  #{entity.hidden})
        </foreach>
    </insert>

    <select id="listByUid" parameterType="map" resultMap="BaseResultMap">
        select* from chrome_visit_url where uid =#{uid}
    </select>

    <select id="listByLikeUrl" parameterType="map" resultMap="BaseResultMap">
        select* from chrome_visit_url where uid = #{uid}
         <![CDATA[
                AND url LIKE CONCAT('%', #{part}, '%')
            ]]>
    </select>

</mapper>